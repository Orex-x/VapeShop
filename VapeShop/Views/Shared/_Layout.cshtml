<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - VapeShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/VapeShop.styles.css" asp-append-version="true"/>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<style>
   .panel-light {
          height: 254px;
          mso-foreground: #0a53be;
          background: #e0e0e0; 
          text-align: justify;
          border-radius: 25px;
          box-shadow: 20px 20px 60px #bebebe,
                               -20px -20px 60px #ffffff;
      }
      
       .panel {
                height: 254px;
                mso-foreground: #0a53be;
                background: #e0e0e0; /* Цвет фона *\
                color: white; /* Цвет текста */
                padding: 50px; /* Поля вокруг текста */
                margin: 10px;;
                text-align: justify; /* Выравнивание по ширине */ 
                border-radius: 25px;
                box-shadow: 20px 20px 60px #bebebe,
                                     -20px -20px 60px #ffffff;
            }
            
   
   .margin-top-40{
    margin-top: 40px;
   }
   
   .right {
    float: right;
    margin-top: 7px;
   }
   
    .strike {
   	   text-decoration: line-through;
   	   color: #a1a1a1;
   	   }
   	   
</style>



  <script>
        $(document).ready(function() {
            $(".btn-search").on("click", function() {
                const elem = document.getElementById('search-text');
                var text = elem.value.toString();
                var url = '@Url.Action("Products", "Home")' + '?search=' + text;
                
                var form = $('<form action="' + url + '" method="post">' +
                  '<input type="text" name="api_url"/>' +
                  '</form>');
                $('body').append(form);
                form.submit();
                
                
            });
        });
    </script>





<body>
<header>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VapeShop</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item" >
                        <a class="nav-link text-light"  asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                   
                </ul>
            </div>
            
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-lg-center">
                <input id="search-text" class="form-control mr-sm-2" type="search" placeholder="Я хочу найти..." aria-label="Search">
                
                <a class="btn-search">
                    <button id="btn-search" class="btn btn-outline-light my-2 my-sm-0" type="submit">Поиск</button>
                </a>
            </div>
            
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-lg-end">
                
                <a class="nav-link text-light" asp-area="" asp-controller="Basket" asp-action="Basket">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
                        Корзина
                    </button>
                </a>
              
                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="AccountClient">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">  
                        Аккаунт
                    </button>
                </a>
            </div>

        </div>
    </nav>
</header>

<div class="container body-container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - VapeShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

